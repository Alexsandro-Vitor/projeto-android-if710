<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="@+id/pref_screen">

    <EditTextPreference
        android:dialogTitle="@string/pref_title"
        android:dialogMessage="@string/pref_msg"
        android:key="feedlink"
        android:negativeButtonText="@string/cancel"
        android:positiveButtonText="@string/change"
        android:title="@string/pref_desc"
        android:defaultValue="@string/feed_link" />

    <CheckBoxPreference
        android:key="downloadmovel"
        android:summary="@string/pref_download_desc"
        android:title="@string/pref_download_title"
        android:defaultValue="@string/downloadmovel"/>

</PreferenceScreen>